{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "compilerOptions": {
            "module": "es2020",
            "target": "es2020"
        }
    },
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    },
    "files": [
        "./src/models/backendInterfaces.d.ts",
        "./src/models/sharedInterfaces.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/routers/expressRoutesTemplate.ts.tsoa"
    ]
}